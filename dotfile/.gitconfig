[user]
	email = me@taoky.moe
	name = taoky
	signingKey = /home/taoky/.ssh/id_ed25519.pub
[core]
	editor = nvim
	pager = delta
[alias]
	adog = log --all --decorate --oneline --graph
	pr = !sh -c 'git fetch -u $1 +pull/$2/head:pr-$1-$2 && git checkout -B pr-$1-$2' -
	mr = !sh -c 'git fetch -u $1 +merge-requests/$2/head:mr-$1-$2 && git checkout -B mr-$1-$2' -
[gpg]
	format = ssh
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true    # use n and N to move between diff sections
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[color]
	ui = auto
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
