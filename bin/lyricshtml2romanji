    "エ": "e",
    "オ": "o",
    # K-row
    "か": "ka",
    "き": "ki",
    "く": "ku",
    "け": "ke",
    "こ": "ko",
    "カ": "ka",
    "キ": "ki",
    "ク": "ku",
    "ケ": "ke",
    "コ": "ko",
    # S-row
    "さ": "sa",
    "し": "shi",
    "す": "su",
