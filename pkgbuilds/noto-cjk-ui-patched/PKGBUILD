package() {
  for var in Black Bold DemiLight Light Medium Regular Thin; do
    install -Dm644 "NotoSansCJK-$var.ttc" "$pkgdir"/usr/share/fonts/noto-cjk/NotoSansCJK-$var.ttc
  done
}